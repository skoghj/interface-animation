---
const { variant = "primary", size = "small" } = Astro.props;
const buttonStyling = "text-slate-100 px-4 py-2  rounded-lg shadow-md boder-2 border-slate-100 animate__animated animate__pulse animate__infinite";
const variantClasses = {
  primary: "bg-rose-700 hover:bg-purple-950",
  secondary: "bg-purple-950/70 hover:bg-purple-950",
};
const sizeClasses = {
  large: "py-6 px-10 text-2xl",
  medium: "py-4 px-8 text-xl",
  small: "py-2 px-6",
};
---

<div>
  <button class={`${buttonStyling} ${variantClasses[variant]} ${sizeClasses[size]}`}><slot /></button>
</div>
